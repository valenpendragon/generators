        {
            "name": "traitResult",
            "explanation": "This is a helper entry to generate multiple traits.",
            "entries": [
                "{i|Appearance:} {dice: 2d6}, {i|Bravery:} {dice: 2d6}, {i|Friendliness:} {dice: 2d6}, {i|Honesty:} {dice: 2d6}, {i|Mood:} {dice: 2d6}, {i|Empathy:} {dice: 2d6}.\n{i|Optional Traits: {optionalTraitResult}}"
            ]
