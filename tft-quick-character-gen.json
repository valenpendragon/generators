{
    "name": "TFT Quick Character Generator",
    "resultPattern": "{b|Class:} {classResult}.\nHeritage: {heritageResult}.",
    "explanation": "This is a quick way to make new TFT characters using methods suggested in the rulebook.",
    "authors": "valenpendragon based loosely on tables included in The Fantasy Trip, copyright Steve Jackson Games.",
    "license": "Creative Commons 4.0. Attribution should include",
    "to do": [
        "Add racial heritage.",
        "Add character motivation",
        "Add character personality",
        "Add other traits to personality",
        "Expand Unusual Weapon talent to include options."
    ],
    "tables": [
        {
            "name": "classResult",
            "explanation": "This table generates the basic class, Hero or Wizard.",
            "entries": [
                {
                    "m": 2,
                    "V": "{wizardType}"
                },
                {
                    "m": 4,
                    "v": "{heroType}"
                }
            ]
        },
        {
            "name": "wizardType",
            "explanation": "This subtable refines the type of wizard generated.",
            "entries": [
                "Martial Wizard (IQ over 11). Optional: {wizardFeature}",
                "Martial Wizard (ST over 11). Optional: {wizardFeature}",
                "Wizardly Thief. Optional: {wizardFeature}"
            ]
        },
        {
            "name": "heroType",
            "explanation": "This subtable refines the type of hero generated.",
            "entries": [
                {
                    "m": 2,
                    "v": "Priest (Hero)"
                },
                {
                    "m": 7,
                    "v": "Rogue (Hero)"
                },
                {
                    "m": 17,
                    "v": "Thief (Hero)"
                },
                {
                    "m": 12,
                    "v": "Ranger (Hero)"
                },
                {
                    "m": 37,
                    "v": "{fighterType}"
                },
                {
                    "m": 17,
                    "v": "Scholar (Hero)"
                },
                {
                    "m": 5,
                    "v": "Healer (Hero)"
                },
                {
                    "m": 3,
                    "v": "Spy (Hero)"
                },
                {
                    "m": 2,
                    "v": "Merchant (Hero)"
                }
            ]
        },
        {
            "name": "fighterType",
            "explanation": "This subtable refines the type of fighter hero generated.",
            "entries": [
                "Fighter Tank, IQ 8",
                "Fighter Tank, IQ 9+. Optional: {fighterFeature}",
                "Barbarian",
                "Mercenary. Optional: {fighterFeature}",
                "Blademaster. Optional: {fighterFeature}",
                "Leader. Optional: {fighterFeature}"
            ]
        },
        {
            "name": "fighterFeature",
            "explanation": "Adds an optional unusual feature to the fighter being generated. Use this feature to adjust XP level.",
            "entries": [
                {
                    "m": 5,
                    "v": "Country background: pick 2+ from Driver, Animal Handler, Vet, and Horsemanship"
                },
                {
                    "m": 12,
                    "v": "Knows Alertness and Silent Movement"
                },
                {
                    "m": 10,
                    "v": "Knows 1+ non-combat spell(s) (may require Literacy)"
                },
                {
                    "m": 12,
                    "v": "Knows 1+ combat spell(s) (may require Literacy)"
                },
                {
                    "m": 13,
                    "v": "Speaks 1 important language other their own (may require Literacy)"
                },
                {
                    "m": 13,
                    "v": "Has Climbing talent"
                },
                {
                    "m": 12,
                    "v": "Has Unarmed Combat I"
                },
                {
                    "m": 10,
                    "v": "Has Tactics talent. May be able to read maps"
                },
                {
                    "m": 7,
                    "v": "Has Unarmed Combat II+"
                },
                {
                    "m": 5,
                    "v": "Has Bard talent (may include Poet, Literacy, etc.)"
                },
                {
                    "m": 3,
                    "v": "Has Literacy and is interested in books"
                },
                {
                    "m": 2,
                    "v": "Has an Unusual Weapon talent"
                }
            ]
        },
        {
            "name": "wizardFeature",
            "explanation": "Adds an optional feature to wizards to increase variety.  Use this feature to make more interesting wizards.",
            "entries": [
                {
                    "m": 8,
                    "v": "Nautical Background: pick 2+ from Boating, Seamanship, Swimming, and Diving"
                },
                {
                    "m": 19,
                    "v": "Country background: pick 2+ from Driver, Animal Handler, Vet, and Horsemanship"
                },
                {
                    "m": 31,
                    "v": "Fights with a sword (and wants a silver sword)"
                },
                {
                    "m": 14,
                    "v": "Literate and carries a book and wizard's chest whenever possible"
                },
                {
                    "m": 11,
                    "v": "Speaks 1 important language other their own (may require Literacy)"
                },
                {
                    "m": 8,
                    "v": "Speaks 2 important languages other their own (may require Literacy)"
                },
                {
                    "m": 6,
                    "v": "Pick 1 from Physicker, Scholar, or Mathematician"
                },
                {
                    "m": 3,
                    "v": "Proto-adept. Literate, IQ 13+"
                }
            ]
        },
        {
            "name": "heritageResult",
            "explanation": "This table determines if the character is pure or hybrid heritage.",
            "entries": [
                {
                    "m": 99,
                    "v": "{heritageType}"
                },
                {
                    "m": 1,
                    "v": "{!heritageType}-{!heritageType}"
                }
            ]
        },
        {
            "name": "heritageType",
            "explanation": "This subtable determines the actual heritage(s) of the character.",
            "entries": [
                {
                    "m": 5,
                    "v": "Fey Elf"
                },
                {
                    "m": 1,
                    "v": "Ancient Elf"
                },
                {
                    "m": 12,
                    "v": "Goblin"
                },
                {
                    "m": 21,
                    "v": "Dwarf"
                },
                {
                    "m": 37,
                    "v": "Human"
                },
                {
                    "m": 21,
                    "v": "Orc"
                },
                {
                    "m": 7,
                    "v": "Halfling"
                }

            ]
        }
    ]
}